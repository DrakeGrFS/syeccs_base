        padding: 10px 15px; /* Relleno más pequeño para el botón */
        font-size: 0.9rem; /* Tamaño de fuente más pequeño para el botón */
    }

    .social-links {
        gap: 10px; /* Espacio más pequeño para los enlaces sociales */
    }

    .social-links a {
        width: 40px; /* Iconos sociales aún más pequeños */
        height: 40px;
    }
}

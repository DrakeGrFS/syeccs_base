<style>
	.contact {
    background: linear-gradient(135deg, #fcfcfc 0%, #f8f8f8 100%);
    padding: 60px 20px; /* Añade relleno a la sección */
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    max-width: 1200px; /* Limita el ancho del contenido para pantallas grandes */
    margin: 0 auto; /* Centra el contenido */
}

.contact-info h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #99311c;
}

.contact-subtitle {
    font-size: 1.2rem;
    margin-bottom: 40px;
    color: #4a4a4a;
    line-height: 1.6;
}

.contact-details {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
}

.contact-item:hover {
    transform: translateX(10px);
}

.contact-icon {
    width: 50px;
    height: 50px;
    background: rgba(122, 30, 12, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.contact-item h4 {
    margin-bottom: 5px;
    color: #99311c;
    font-size: 1.1rem;
}

.contact-item p {
    color: #4a4a4a;
    margin: 0;
    font-size: 1rem; /* Asegura un tamaño de fuente base para el párrafo */
}

.cta-card {
    max-width: 100%;
    background: white;
    padding: 50px 40px;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
}

.cta-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, #99311c, #a0251a);
}

.cta-card h3 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #99311c;
}

.cta-card p {
    margin-bottom: 30px;
    color: #4a4a4a;
    line-height: 1.6;
}

.cta-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-bottom: 30px;
    flex-wrap: wrap;
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.social-links a {
    width: 50px;
    height: 50px;
    background: rgba(122, 30, 12, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #99311c;
    transition: all 0.3s ease;
}

.social-links a:hover {
    background: #99311c;
    color: white;
    transform: translateY(-3px);
}

/* --- Ajustes Responsivos --- */

@media (max-width: 768px) {
    .contact-content {
        grid-template-columns: 1fr;
        gap: 50px;
    }

    .contact-info h2 {
        font-size: 2rem;
        text-align: center; /* Centra el texto en pantallas más pequeñas */
    }

    .contact-subtitle {
        font-size: 1.1rem;
        text-align: center; /* Centra el texto en pantallas más pequeñas */
        margin-bottom: 30px; /* Ajusta el margen */
    }

    .contact-details {
        gap: 20px; /* Reduce ligeramente el espacio */
    }

    .contact-item {
        padding: 18px; /* Reduce ligeramente el relleno */
        flex-direction: column; /* Apila el icono y el texto verticalmente */
        text-align: center; /* Centra el texto */
        gap: 10px; /* Ajusta el espacio entre el icono y el texto */
    }

    .contact-item:hover {
        transform: none; /* Deshabilita la transformación al pasar el ratón para pantallas pequeñas */
    }

    .contact-icon {
        margin-bottom: 5px; /* Añade margen debajo del icono cuando está apilado */
    }

    .contact-item h4 {
        font-size: 1rem; /* Ajusta el tamaño de la fuente */
    }

    .contact-item p {
        font-size: 0.95rem; /* Ajusta el tamaño de la fuente */
    }

    .cta-card {
        padding: 40px 30px;
    }

    .cta-card h3 {
        font-size: 1.8rem; /* Ligeramente más grande para tabletas */
    }

    .cta-card p {
        font-size: 1rem; /* Ajusta el tamaño de la fuente del párrafo */
        margin-bottom: 25px; /* Ajusta el margen */
    }

    .cta-buttons {
        flex-direction: column;
        align-items: center;
        gap: 10px; /* Reduce el espacio entre botones */
    }

    .cta-buttons .btn {
        width: 100%;
        max-width: 280px; /* Permite que los botones sean un poco más anchos */
        padding: 12px 20px; /* Ajusta el relleno del botón */
        font-size: 1rem; /* Ajusta el tamaño de la fuente del botón */
    }

    .social-links {
        gap: 15px; /* Reduce el espacio entre los iconos sociales */
    }

    .social-links a {
        width: 45px; /* Iconos sociales ligeramente más pequeños */
        height: 45px;
    }
}

@media (max-width: 400px) {

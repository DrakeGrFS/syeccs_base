    }

    .contact-item {
        padding: 15px; /* Relleno más pequeño para los elementos de contacto */
        gap: 8px; /* Reduce aún más el espacio cuando están apilados */
    }

    .contact-icon {
        width: 40px; /* Iconos más pequeños */
        height: 40px;
        margin-bottom: 0; /* Elimina el margen inferior si el apilamiento no se ve bien */
    }

    .contact-item h4 {
        font-size: 0.95rem; /* Encabezado más pequeño dentro del elemento de contacto */
    }

    .contact-item p {
        font-size: 0.85rem; /* Párrafo más pequeño dentro del elemento de contacto */
